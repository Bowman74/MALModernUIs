<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MalModernUi" x:Class="MalModernUi.MainPage">
    <StackLayout Orientation="Vertical">
        <!-- Place new controls here -->
        <Label Text="What do you want to do?" HorizontalOptions="Start" VerticalOptions="Start" />
        <Label x:Name="lblConversation" VerticalOptions="FillAndExpand" Text="{Binding AppReplies}" LineBreakMode="WordWrap" VerticalTextAlignment="End" />
        <StackLayout Orientation="Horizontal" >
            <Entry x:Name="txtDialog" VerticalOptions="End" HorizontalOptions="FillAndExpand" Text="{Binding UserText}"/>
            <ImageButton Source="{Binding MicrophoneImage}" WidthRequest="50" />
            <Button x:Name="cmdSend" Text="Send" HorizontalOptions="End" Command="{Binding SendText}" />
        </StackLayout>
    </StackLayout>
</ContentPage>